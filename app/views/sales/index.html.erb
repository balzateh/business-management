<div class="row mb-5">
    <div class="col-md-10">
        <h3>Listado de Ventas</h3>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary" href="<%= new_sale_path %>" role="button">Nueva Venta</a>
    </div>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Venta#</th>
      <th scope="col">Fecha de la compra</th>
      <th scope="col">Cliente</th>
      <th scope="col">Productos</th>
      <th scope="col">Detalles</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
    <tr>
      <th scope="row"><%= sale.id %></th>
      <td><%= sale.created_at.strftime("%Y-%m-%d") %></td>
      <td><%= sale.client_name %></td>
      <td>
        <% @saleproducts.where(sale_id: sale.id).each do |sale_p| %>
          <%= sale_p.product_name %>,<br>
        <% end %>
      </td>
      <td><%= link_to 'Ver',sale_path(sale) %></td>
    </tr>
    <% end %> 
  </tbody>
</table>